{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["ES2017", "DOM"],
        "module": "ES6",
        "moduleResolution": "Node",
        "types": ["node", "@webgpu/types", "jquery"],
        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "test/app.js"],
    "exclude": ["node_modules", "dist", "vite.config.ts"]
}
